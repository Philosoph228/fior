{
  "name": "Chatbot",
  "description": "chatvdvoem bot",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.chatvdvoem.ru/*"],
      "css": ["bot.css"],
      "js": ["bot.js"]
    }
  ]
}

